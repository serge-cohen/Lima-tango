<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>fr.soleil</groupId>
		<artifactId>super-pom-C-CPP-device</artifactId>
		<version>RELEASE</version>
	</parent>

	<groupId>fr.soleil.device</groupId>
	<artifactId>LimaDetector-${aol}-${mode}</artifactId>
	<version>1.2.4-SNAPSHOT</version>
	<packaging>nar</packaging>
	<name>LimaDetector</name>
	<description>LimaDetector device</description>

	<dependencies>

		<!-- Mavenized drivers -->
		<dependency>
			<groupId>com.basler</groupId>
			<artifactId>Genicam-${aol}-shared-${mode}</artifactId>
			<version>2.1.0</version>
		</dependency>

		<dependency>
			<groupId>com.basler</groupId>
			<artifactId>Pylon-${aol}-shared-${mode}</artifactId>
			<version>2.3.3</version>
		</dependency>
			
		<dependency>
			<groupId>fr.in2p3</groupId>
			<artifactId>Xpix-${aol}-static-release</artifactId>
			<version>2.0.7</version>
		</dependency>

		<dependency>
			<groupId>com.adsc-xray.lib</groupId>
			<artifactId>AdscDriver-${aol}-shared-${mode}</artifactId>
			<version>1.0.0</version>
		</dependency>

		<!-- Lima modules (core and plugins) -->
		<dependency>
			<groupId>fr.soleil.lib.Lima</groupId>
			<artifactId>LimaControl-${aol}-shared-${mode}</artifactId>
			<version>1.2.4-SNAPSHOT</version>         
		</dependency>

		<dependency>
			<groupId>fr.soleil.lib.Lima.Camera</groupId>
			<artifactId>LimaAndor3-${aol}-shared-${mode}</artifactId>
			<version>1.2.4-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>fr.soleil.lib.Lima.Camera</groupId>
			<artifactId>LimaBasler-${aol}-shared-${mode}</artifactId>
			<version>1.2.4-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>fr.soleil.lib.Lima.Camera</groupId>
			<artifactId>LimaMarccd-${aol}-shared-${mode}</artifactId>
			<version>1.2.4-SNAPSHOT</version>
		</dependency>

		<dependency>
			 <groupId>fr.soleil.lib.Lima.Camera</groupId>
			 <artifactId>LimaPilatus-${aol}-shared-${mode}</artifactId>
			 <version>1.2.4-SNAPSHOT</version>
		</dependency>
    
		<dependency>
			<groupId>fr.soleil.lib.Lima.Camera</groupId>
			<artifactId>LimaXpad-${aol}-shared-${mode}</artifactId>
			<version>1.2.4-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>fr.soleil.lib.Lima.Camera</groupId>
			<artifactId>LimaAdsc-${aol}-shared-${mode}</artifactId>
			<version>1.2.4-SNAPSHOT</version>
		</dependency>
      
		<dependency>
			<groupId>fr.soleil.lib.Lima.Camera</groupId>
			<artifactId>LimaProsilica-${aol}-shared-${mode}</artifactId>
			<version>1.2.4-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>fr.soleil.lib.Lima.Camera</groupId>
			<artifactId>LimaSimulator-${aol}-shared-${mode}</artifactId>
			<version>1.2.4-SNAPSHOT</version>
		</dependency>
		
		<!-- Tools -->
		<dependency>
			<groupId>fr.soleil.lib</groupId>
			<artifactId>NexusCPP-${aol}-${library}-${mode}</artifactId>
		</dependency>
                  
		<dependency>
			<groupId>fr.soleil.lib</groupId>
			<artifactId>YAT4Tango-${aol}-${library}-${mode}</artifactId>   
		</dependency>

		<dependency>
			<groupId>fr.soleil.lib</groupId>
			<artifactId>YAT-${aol}-${library}-${mode}</artifactId>
		</dependency>

	</dependencies>
	
	<scm>
		<connection>scm:git:git@github.com:soleil-ica/Lima.git</connection>
		<developerConnection>scm:git:git@github.com:soleil-ica/Lima.git</developerConnection>
		<url>https://github.com/soleil-ica/Lima</url>
	</scm>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.freehep</groupId>
				<artifactId>freehep-nar-plugin</artifactId>
				<configuration>
					<cpp>
						<defines>
							<define>USE_GIGE</define>	
							
							<!-- define wich detector you need to ENABLE -->
							<!-- <define>AVIEX_ENABLED</define> -->
							<!-- <define>BASLER_ENABLED</define>-->
							<!-- <define>MARCCD_ENABLED</define> -->
							<!-- <define>PILATUS_ENABLED</define> -->
							<!-- <define>XPAD_ENABLED</define> -->
							<!-- <define>ADSC_ENABLED</define>    -->
							<!-- <define>PROSILICA_ENABLED</define> -->
							<define>SIMULATOR_ENABLED</define>
							<define>ANDOR3_ENABLED</define>
						</defines>

						<systemIncludePaths>                
							<systemIncludePath>/home/informatique/ica/langlois/Andor3/andor/inc</systemIncludePath>
						</systemIncludePaths>

						<!-- exclude every detector which is NOT ENABLED -->
						<excludes>
                                                        <exclude>Aviex*.*</exclude>
							<exclude>Basler*.*</exclude>
							<exclude>MarCCD*.*</exclude>
							<exclude>Pilatus*.*</exclude>
							<exclude>Xpad*.*</exclude>
							<exclude>Adsc*.*</exclude>
							<exclude>Prosilica*.*</exclude>
							<exclude>Princeton*.*</exclude>
							<!--<exclude>Simulator*.*</exclude>-->
							<exclude>Pco*.*</exclude>
							<exclude>PerkinElmer*.*</exclude>
							<!--<exclude>Andor3*.*</exclude>-->


						</excludes>

						<!-- define less verbose mode for gcc-->
						<options>
							<option>-w</option>
						</options>
					</cpp>   
				</configuration>
			</plugin>

		</plugins>
	</build>

	<developers>
		<developer>
			<id>noureddine</id>
			<name>noureddine</name>
			<url>http://controle/</url>
			<organization>Synchrotron Soleil</organization>
			<organizationUrl>http://www.synchrotron-soleil.fr</organizationUrl>
			<roles>
				<role>developper</role>
			</roles>
			<timezone>1</timezone>
		</developer>

		<developer>
			<id>langlois</id>
			<name>langlois</name>
			<url>http://controle/</url>
			<organization>Synchrotron Soleil</organization>
			<organizationUrl>http://www.synchrotron-soleil.fr</organizationUrl>
			<roles>
				<role>manager</role>
			</roles>
			<timezone>1</timezone>
		</developer>
	</developers>
</project>
